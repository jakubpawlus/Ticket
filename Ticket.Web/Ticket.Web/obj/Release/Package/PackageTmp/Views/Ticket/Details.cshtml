@using Ticket.Web.DAL.Repository.Model.Ticket
@model TicketDetailsModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Details - @Model.Ticket.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-6">
        <dl class="dl-horizontal">
            <dt>Created date:</dt>
            <dd>@Model.Ticket.DateCreated</dd>
            <dt>Created by user:</dt>
            <dd>@Model.Ticket.CreatedBy</dd>
            <dt>Assign to user:</dt>
            <dd>@Model.Ticket.AssignTo</dd>
        </dl>
    </div>
    <div class="col-lg-6">
        <dl class="dl-horizontal">
            <dt>Status:</dt>
            <dd>@Model.Ticket.Status</dd>
            <dt>Piority:</dt>
            <dd>@Model.Ticket.Priority</dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <dl class="dl-horizontal">
            <dt>Description</dt>
            <dd>@Model.Ticket.Description</dd>
        </dl>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
    @foreach (var item in @Model.TicketDisciusions)
    {
        <div class="panel panel-default">
            <div class="panel-heading"> @item.CreatedBy: @item.DateCreate </div>
            <div class="panel-body">
                @item.Description
            </div>
            <div class="panel-footer">  </div>
        </div>
    }
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @using (Html.BeginForm("AddComment", "Ticket", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="panel-heading">Add Comment </div>
                <div class="panel-body">
                    <input type="hidden" name="TicketId" value="@Model.Ticket.Id" />
                 
                    <textarea rows="4" cols="50" name="comment" class="form-control"></textarea>
                </div>
                <div class="panel-footer text-center">
                    <button class="btn btn-primary" type="submit">Save</button> 
                </div>
            }
        </div>
    </div>
</div>